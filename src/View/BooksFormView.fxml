                   onMouseClicked="#img_back" onMouseExited="#playMouseEnterAnimation" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../Images/back.png"/>
            </image>
        </ImageView>
        <ImageView fitHeight="77.0" fitWidth="89.0" layoutX="149.0" layoutY="52.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../Images/books.png"/>
            </image>
        </ImageView>
        <Text layoutX="246.0" layoutY="121.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Mange Books">
            <font>
                <Font size="29.0"/>
            </font>
        </Text>
        <JFXTextField fx:id="txt_bk_id" layoutX="145.0" layoutY="155.0" prefHeight="25.0" prefWidth="310.0"
                      promptText="Book ID"/>
        <JFXTextField fx:id="txt_bk_title" layoutX="145.0" layoutY="191.0" prefHeight="25.0" prefWidth="310.0"
                      promptText="Book Title"/>
        <JFXTextField fx:id="txt_bk_auth" layoutX="145.0" layoutY="226.0" prefHeight="25.0" prefWidth="310.0"
                      promptText="Author"/>
        <JFXTextField fx:id="txt_bk_st" layoutX="145.0" layoutY="266.0" prefHeight="25.0" prefWidth="310.0"
